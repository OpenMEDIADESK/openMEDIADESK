/* includes all standard-backend styles */
/* Auflistungen in Tabellen immer mit 100% breite */

#folderlistpage table, #categorylistpage table, #pinlistpage table,
#settingsmenupage table,
#filesystemimportpage table, #statpage table {
    width:100%;
    float:left;
}

/**************************************/
/**  IMAGE-IMPORT                    **/
/**************************************/

div.importoption {
    padding:10px;
    width:40%;
    float:left;
}

div.importoption span {
    display: block;
}

div.importoption a {
    float:right;
	color: #990000;
}

form#webimport {
    margin:30px;
}

/**************************************/
/**  FILESYSTEMIMPORT PAGE           **/
/**************************************/

div#filesystemimportpage td.tdCheck, th.tdCheck {
    width:20px;
    font-weight:normal;
}

#filesystemimportpage .tdSize {
    text-align:right;

}

/**************************************/
/** INBOX                            **/
/**************************************/

div#inboxpage span#inboxSize, span#imageCount {
    display:block;
    font-weight:bold;
}

div#inboxpage .cbxall {
    float:right;
}

div#inboxpage label, div#inboxpage input {
    vertical-align:middle;
}

div.inboxList {
    float:left;
    width:540px;
    background-color:#DFDFDF;
    margin-bottom:15px;
}

div.inboxEntry {
    width:540px;
    clear:both;
}

div.inboxEntry img {
    float:left;
}

div.inboxData {
    padding:3px;
    float:left;
}

div.inboxEntry input {
    float:right;
}

div.selectFolder, div.selectCat {
    clear:both;
    margin-bottom:15px;
}

form#inbox .submitButton {
    margin-top:10px;
    width:140px;
}

div#inboxpage a.buttonEdit {
    display:block;
    background-image:url('/img/icon/Mini_Pixel_Icons/edit-page-yellow.gif') !important;
    width:14px !important;
    height:14px !important;
}

/**************************************/
/**  ADM:USERLIST                    **/
/**************************************/


div#userlistpage table {
    width:100%;
}

div#userlistpage ul {
  text-align:right;
  list-style:none;
}

ul var {
    display:inline;
}

div#userlistpage .buttonAdd {
    margin-left:5px;
}

div#userlistpage td.iEnabled {
    background-image:url("/img/benutzer_on.gif");
    background-repeat:no-repeat;
    background-position:center;
    width:15px !important;
}

div#userlistpage td.iDisabled {
    background-image:url("/img/benutzer_off.gif");
    background-repeat:no-repeat;
    background-position:center;
    width:15px !important;
}

div#userlistpage td.tdUsername {
    width:490px !important;
}

div#userlistpage .buttonPassword {
    background-image:url("/img/icon/tango/default/16x16/apps/utilities-terminal.png");
    background-repeat:no-repeat;
    background-position:center;
    width:15px !important;
}

div#userlistpage td.tdEdit {
    width:15px !important;
}

div#userlistpage td.tdBreak {
    width:15px !important;
}

/**************************************/
/**  USER EDIT                       **/
/**************************************/

form#useredit legend {
    font-weight:bold;
    padding:0px;
}

form#useredit fieldset {
    border:none;
    margin-bottom:10px;
    padding:0px;
    padding-top:10px;
}

form#useredit label {
    display:block;
    width:70px;
    float:left;
}

form#useredit p {
    margin-top:10px;
    margin-bottom:10px;
}

form#useredit input.textField {
    width:220px;
}

form#useredit input#checkPassword, form#useredit input#disableCredits {
    width:20px !important;
    float:left;
}

/**************************************/
/**  ADM:PINLIST                     **/
/**************************************/

div#pinlistpage ul {
    float:right;
    clear:both;
    list-style:none;
}

div#pinlistpage td.tdPinCode {
    width:35px
}

div#pinlistpage td.tdEdit {
    width:25px
}

div#pinlistpage td.tdBreak {
    width:25px
}

.buttonPics {
    background-image:url("/img/icon/tango/default/16x16/mimetypes/image-x-generic.png");
    background-repeat:no-repeat;
    background-position:center;
    height:15px;
    width:15px;
    display:block;
}


/**************************************/
/**  ADM:FOLDERLIST                  **/
/**************************************/

div#folderlistpage ul {
    float:right;
    clear:both;
    list-style:none;
}

div#folderlistpage ul var {
    display:inline;
}

div#folderlistpage .buttonAdd {
    margin-left:5px;
}

div#folderlistpage td.tdFolderNumber {
    width:40px;
}

div#folderlistpage td.tdTitle {
    width:455px;
}

div#folderlistpage td.tdEdit {
    width:15px;
}

div#folderlistpage td.tdBreak {
    width:15px;
}

/**************************************/
/**  ADM:CATEGORYLIST                **/
/**************************************/

div#categorylistpage ul {
    float:right;
    clear:both;
    list-style:none;
}

div#categorylistpage ul var {
    display:inline;
}

div#catcrumb a:hover {
    text-decoration:none;
}

div#categorylistpage td {
}

div#categorylistpage td.tdIcon {
    width:15px;
}

div#categorylistpage td.tdTitle {
    width:490px;
}

div#categorylistpage td.tdEdit {
	width:15px;
}

div#categorylistpage td.tdBreak {
    /*float:right;*/
    width:15px;
}

/**************************************/
/**  CATEGORY EDIT                   **/
/**************************************/

form#categoryedit {
    margin-top:20px;
}

form#categoryedit label {
    display:block;
    width:125px;
    float:left;
    margin-top:14px;
    margin-right:5px;
}

form#categoryedit input {
    margin-top:12px;
    width:140px;
}

form#categoryedit br {
    clear:both;
}

form#categoryedit #textCategoryid {
    background-color:transparent;
    border:none;
}

/**************************************/
/**  FOLDER EDIT                     **/
/**************************************/

form#folderedit {
    margin-top:20px;
}

form#folderedit label {
    display:block;
    width:105px;
    float:left;
    margin-top:14px;
    margin-right:5px;
}

form#folderedit input, form#folderedit select {
    margin-top:12px;
    background-color: #EEEEEE;
}

form#folderedit br {
    clear:both;
}

form#folderedit #textFoldernumber, #textCreationdate {
    background-color:transparent;
    border:none;
}

/**************************/
/* STATPAGE               */
/**************************/

label#labUser {
    margin-top:10px;
    display:block;
}

div#statChart {
    margin-top:15px;
    margin-bottom:15px;
}

div#stattable td {
    padding:3px;
}

div#stattable td.tdDate {
    width:125px
}

div#stattable td.tdUsername {
    text-align:left;
}

div#stattable td.tdEdit {
    text-align:right;
    width:20px;
}

div#stattable td.tdShow {
    text-align:right;
    width:20px;
}

div#system {
    padding-top:25px;
    margin-bottom:45px;
}

/**************************/
/* IMAGEEDIT              */
/**************************/

div#imageeditpage #imageInfo img {
    margin-top:25px;
    margin-bottom:15px;
}

form#imageedit label {
    display:block;
    float:left;
    width:150px;
    margin-right:5px;
}

form#imageedit label.cbx {
    width:auto;
    display:inline;
    float:none;
    vertical-align:super;
}

form#imageedit input.metadataButton {
    clear:both;
    width:150px !important;
}

form#imageedit input.textField, textarea {
    width:210px;
}

form#imageedit textarea {
    height:70px;
}

form#imageedit fieldset {
    width:372px;
    float:left;
    clear:both;
}

label.labLangDe {
    background-image:url('/img/flag_de.gif');
    background-repeat:no-repeat;
    background-position:right;
    margin-right:5px;
}

label.labLangEn {
    background-image:url('/img/flag_eng.gif');
    background-repeat:no-repeat;
    background-position:right;
    margin-right:5px;
}

/**************************/
/* IMAGEDELET-PAGE        */
/**************************/

div.deleteList {
    margin-top:10px;
    clear:both;
    width:540px;
    background-color:#DFDFDF;
    display:table;
}

div.deleteEntry {
    width:540px;
    clear:both;
}

div.deleteEntry img {
    float:left;
}

div.deleteData {
    padding:3px;
    float:left;
}

div#deletepage .actionButton {
    width:150px !important;
}

div#deletepage ul {
    clear:both;
    float:right;
    margin-top:10px;
}

div#deletepage li {
    display:inline;
    padding-left:10px;
    color: #900000;
}

/*****************************/
/*  SMART FUNCTIONS          */
/*****************************/

ul.smartmenu {
    padding:0px;
    list-style-image:none;
}

/*****************************/
/* Menu-Settings             */
/*****************************/

div#settingsmenupage h3 {
    float:left;
}

div#settingsmenupage ul {
    float:right;
    clear:both;
    list-style:none;
}

div#settingsmenupage ul var {
    display:inline;
}

div#settingsmenupage .buttonAdd {
    margin-left:5px;
}

div#settingsmenupage td.tdFolderNumber {
    width:40px;
}

div#settingsmenupage td.tdTitle {
    width:755px;
}

div#settingsmenupage td.tdEdit {
    width:15px;
}

div#settingsmenupage td.tdBreak {
    width:15px;
}
