.imageActionMenu .buttonLightbox {
    background-repeat:no-repeat;
    width:59px;
    height:11px;
    display:inline;
    /*float:right;*/
/*
}
*/

.buttonLightbox a:hover {
    text-decoration:none;
}

ul.imageActionMenu {
    height:12px;
    list-style:none;
    padding:0px;
    margin:0px;
    width:170px;
}

ul.imageActionMenu li {
    display:inline;
}

div.thumbnailView {
    margin-top:10px;
}

div.thumbnailView p {
    margin-top:2px;
    margin-bottom:5px;
    height:12px;
    overflow:hidden;
}

div.thumbnailView p.imgTitle {
    font-weight:bold;
    margin-bottom:10px;
}

div.calendar input {
 	font-size: 10px;
	color: #000000;
	line-height: normal;
    background-color: #FFFFFF;
    margin-top:0px;
}

.buttonSelectImageSel {
    /* Bild das für -select- verwendet wird */
    background-image:url('/images/iSelect1.gif');
    width:170px;
    height:11px;
}

.buttonSelectImageDsel {
    /* Bild das für -deselect- verwendet wird */
    background-image:url('/images/iDeselect1.gif');
    width:170px;
    height:11px;
}

/** NEU Thumbnail Bildauswahl mit JS und/oder AJAX **/

.selectImage input {
    display:block;
    float:left;
    margin-top:5px;
    padding:0px;
    vertical-align:middle;
}

.selectImage label {
    display:block;
    margin:5px;
    vertical-align:middle;
}

form.selectImage {
  display:table;
  width:100%;
  clear:both;
}

#busyDiv {
    position:fixed;
    top:1px;
    left:1px;
    height:100%;
    width:100%;
    background:url("/img/alphablend.gif");
    background-repeat:repeat;
}

/** sorter: sortieranzeige **/

div.sorter {
    /*float:right;
    clear:left;*/
    text-align:right;
    width:100%;
}
