/**************************************/
/** THUMBNAIL-IMAGE-SITE              */
/**************************************/

.pageInfo {
    padding-top:4px;
    float:left;
}

/* page Header */

.pageHeader {
    margin-top:10px;
    padding-top:3px;
    padding-left:5px;
    padding-right:5px;
    height:22px;
    width:100%;
    display:table;
    clear:both;
}

.pageHeader input {
    margin-top:0px;
}


/* Page Selector */

.pageSelector {
    display:block;
    float:right;
}

.pageSelector form {
    padding:0px;
    margin:0px;
}

.pageSelector input {
	width: 28px;
}

.pageSelector input.goButton {
    width:24px;
    height:17px;
}

/* Page Info - Blättern, etc...*/

.prevPageLink img {
    background-image:url('/images/PfeilBraunLinks.gif');
    display:inline;
    height:7px;
    width:17px;
}

.nextPageLink img {
    background-image:url('/images/PfeilBraunRechts.gif');
    display:inline;
    height:7px;
    width:17px;
}

/* image menu */

.imageMenu {
    float:right;
    width:100%;
    clear:both;
}

.imageMenu ul {
    padding-left:0px;
    float:right;
    clear:both;
    padding-left:0px;
    margin-top:10px;
}

.imageMenu li {
    border-left-color:black;
    border-left-style:solid;
    border-left-width:1px;
    display:inline;
    padding-left:10px;
}

.imageMenu a {
}

.imageMenu a:hover {
}

table.filelist {
    width:100%;
    text-align:left;
}

table.filelist tr, table.filelist td {
    text-align:left;
}

table.filelist td.fileData {
}

div.image {
    width:170px;
    float:left;
    margin-bottom:16px;
    background-image:url('/img/firstcss/thumbliner.gif');
    background-position:bottom;
    background-repeat:no-repeat;
    height:305px;
    overflow:hidden;
    padding:3px;
}

.folderindexContent div.image {
    height:230px;
}

div.imageDisplay {
    height:175px;
    width:100%;
    text-align:center;
}

div.thumbnailView .buttonEdit {
    background-repeat:no-repeat;
    text-decoration:none;
    width:40px;
    height:11px;
    display:inline;
    /*float:left;*/
}

div.thumbnailView .buttonEdit:hover {
    text-decoration:none !important;
}

.buttonEdit var {
    display:none;
}

.buttonCart {
    background-repeat:no-repeat;
    width:40px;
    height:11px;
    display:inline;
    /*float:left;*/
}

.buttonCart:hover {
    text-decoration:none;
}

